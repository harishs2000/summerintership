<%- include("./partials/header") %>
<div class="container">
<br>
<h2 style="text-align: center;">Edit <%= movie.name %></h2>
<form action="/movies/<%= movie._id %>/edit?_method=PUT" method="POST">
    <div style="width:30%; margin:30px auto;">
    <div class="form-group"><input type="text" class="form-control" name="movie[name]" value="<%= movie.name %>"></div>
    <div class="form-group"><input type="text" class="form-control" name="movie[year]" value="<%= movie.year %>"></div>
    <div class="form-group"><input type="text" class="form-control" name="movie[img]" value="<%= movie.img %>"></div>
    <div class="form-group"><input type="submit" class="btn btn-primary btn-block" ></div>
    <a href="/movies/<%= movie._id %>">go back</a>
    </div>
</form>
</div>
<%- include("./partials/footer") %>
