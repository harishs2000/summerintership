<%- include("./partials/header") %>
<div class="container">
<br>
<h2 style="text-align: center;">Add a new Book</h2>
<form action="/books/<%= book._id %>/edit?_method=PUT" method="POST">
    <div style="width:30%; margin:30px auto;">
    <div class="form-group"><input type="text" class="form-control" name="book[title]" value="<%= book.title %>"></div>
    <div class="form-group"><input type="text" class="form-control" name="book[author]" value="<%= book.author %>"></div>
    <div class="form-group"><input type="text" class="form-control" name="book[image]" value="<%= book.image %>"></div>
    <div class="form-group"><input type="text" class="form-control" name="book[rating]" value="<%= book.rating %>"></div>
    <div class="form-group"><input type="text" class="form-control" name="book[price]" value="<%= book.price %>"></div>
    <div class="form-group"><input type="text" class="form-control" name="book[category]" value="<%= book.category %>"></div>
    <div class="form-group"><textarea class="form-control" name="book[about]" rows="2"><%= book.about %></textarea></div>
    <div class="form-group"><input type="submit" class="btn btn-primary btn-block" ></div>
    <a href="/books/<%= book._id %>">go back</a>
    </div>
</form>
<div style="width:30%; margin:30px auto;">
<form action="/books/<%= book._id %>?_method=DELETE" method="POST">
    <input type="submit" class="btn btn-primary" value="Delete book">
</form>
</div>
</div>
<%- include("./partials/footer") %>
