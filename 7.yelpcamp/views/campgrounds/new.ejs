<%- include("../partials/header") %>
<div class="container">
<br>
<h2 style="text-align: center;">Add a new Campground</h2>
<form action="/campgrounds/new" method="POST">
    <div style="width:30%; margin:30px auto;">
    <div class="form-group"><input type="text" class="form-control" name="newcgname" placeholder="campground name"></div>
    <div class="form-group"><input type="text" class="form-control" name="newcgimg" placeholder="campground url"></div>
    <div class="form-group"><textarea class="form-control" name="newcgdescription" rows="2" placeholder="description"></textarea></div>
    <div class="form-group"><input type="submit" class="btn btn-primary btn-block" ></div>
    <a href="/campgrounds">go back</a>
    </div>
</form>
</div>
