<%- include("../partials/header") %>
<div class="container">
<br>
<h2 style="text-align: center;">Add a comment to <%= cg.name %></h2>
<form action="/campgrounds/<%= cg._id %>/comments/new" method="POST">
    <div style="width:30%; margin:30px auto;">
    <div class="form-group"><input type="text" class="form-control" placeholder="author" name="author"></div>
    <div class="form-group"><input type="text" class="form-control" placeholder="comment" name="text"></div>
    <div class="form-group"><input type="submit" class="btn btn-primary btn-block" value="comment!" ></div>
    <a href="/campgrounds/<%= cg._id %>">go back</a>
    </div>
</form>
</div>
<%- include("../partials/footer") %>
